rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ヘルパー（従業員）コレクション
    match /helpers/{helperId} {
      // 読み取り: 全員許可
      allow read: if true;
      // 書き込み: 認証済みユーザーのみ（開発環境では全許可）
      allow write: if true;
    }

    // シフトコレクション
    match /shifts/{shiftId} {
      // 読み取り: 全員許可
      allow read: if true;
      // 書き込み: 全員許可（開発環境）
      allow write: if true;
    }

    // 接続テストコレクション
    match /connection-test/{docId} {
      allow read, write: if true;
    }

    // その他の全てのコレクション
    match /{document=**} {
      // 開発環境では全て許可
      allow read, write: if true;
    }
  }
}
